@model HomeViewModel
@{
    ViewData["Title"] = "Home Page";
    var pi = Model.PaginationInfo;
}



<div class="card mb-3">
    <div class="card-body">
        <form class="row align-items-center">
            <div class="col-auto">
                <label asp-for="CategoryId">Category</label>
            </div>
            <div class="col-auto">
                <select class="form-select" asp-for="CategoryId" asp-items="Model.Categories">
                    <option value="">All</option>
                </select>
            </div>
            <div class="col-auto">
                <label asp-for="BrandId">Brand</label>
            </div>
            <div class="col-auto">
                <select class="form-select" asp-for="BrandId" asp-items="Model.Brands">
                    <option value="">All</option>
                </select>
            </div>
            <div class="col-auto">
                <button class="btn btn-primary">Filter</button>
            </div>
        </form>
    </div>
</div>

<div class="row">
    @foreach (var p in Model.CatalogItems)
    {
        <div class="col-sm-6 col-md-4 col-lg-3 mb-4">
            <div class="product-container shadow p-3">
                <div class="product-image">
                    <img src="~/img/products/@p.PictureUri" alt="Product Name" class="w-100" />
                </div>
                <div class="product-name my-2 h6" title="@p.Name">
                    @p.Name
                </div>
                <div class="d-flex justify-content-between align-items-center">
                    @p.Price.ToString("c2")
                    <a href="#" class="btn btn-sm btn-success">
                        <i class="fa-solid fa-cart-plus"></i>
                    </a>
                </div>
            </div>
        </div>
    }
</div>


<nav aria-label="Page navigation example">

    <p class="text-center mt-2 text-secondary">Showing @pi.RangeStart - @pi.RangeEnd of @pi.TotalItems items</p>
    <ul class="pagination justify-content-center">

        @if (pi.HasPrevious)
        {
            <li class="page-item">
                <a asp-route-CategoryId="@Model.CategoryId" asp-route-BrandId="@Model.BrandId" asp-route-PageId="@(pi.PageId - 1)" class="page-link" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
        }
        else
        {
            <li class="page-item disabled">
                <a class="page-link"><span aria-hidden="true">&laquo;</span></a>
            </li>
        }



        @foreach (var i in pi.PageNumbers)
        {
            if (i == -1)
            {
                <li class="page-item disabled">
                    <a class="page-link">&hellip;</a>
                </li>
            }
            else
            {
                <li class="page-item @(i == pi.PageId ? "active" : "")">
                    <a asp-route-CategoryId="@Model.CategoryId" asp-route-BrandId="@Model.BrandId" asp-route-PageId="@i" class="page-link">@i</a>
                </li>

            }
        }




        @if (pi.HasNext)
        {
            <li class="page-item">
                <a asp-route-CategoryId="@Model.CategoryId" asp-route-BrandId="@Model.BrandId" asp-route-PageId="@(pi.PageId + 1)" class="page-link" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        }
        else
        {
            <li class="page-item disabled">
                <a class="page-link"><span aria-hidden="true">&raquo;</span></a>
            </li>
        }
    </ul>
</nav>


